{
  "mcpServers": {
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "tooluniverse": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory", "${TOOLUNIVERSE_ENV}",
        "run", "tooluniverse-smcp-stdio",
        "--hook-type", "SummarizationHook"
      ]
    }
  }
}
