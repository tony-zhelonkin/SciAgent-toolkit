{
  "mcpServers": {
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "tooluniverse": {
      "type": "stdio",
      "command": "${TOOLUNIVERSE_ENV}/bin/python",
      "args": [
        "-m", "tooluniverse.smcp_server",
        "--transport", "stdio",
        "--hook-type", "SummarizationHook"
      ]
    }
  }
}
